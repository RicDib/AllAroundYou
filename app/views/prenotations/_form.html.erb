<%= form_for([@property, @property.prenotations.build], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @prenotation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@prenotation.errors.count, "error") %> prohibited this prenotation from being saved:</h4>

      <ul>
      <% @prenotation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

      <%= f.label :nome, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>

  </div>
  
  <div class="form-group">

      <%= f.label :inizio, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :start_time, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">

      <%= f.label :fine, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :end_time, class: "form-control" %>
      </div>

  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit value: "Crea prenotazione", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
