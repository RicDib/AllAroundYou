<h2>Nuovo account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <p><div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true %>
  </div></p>

  <p><div class="field">
    <%= f.label :username %><br/>
    <%= f.text_field :username, autofocus: true %>
  </div></p>

  <p><div class = "field">
    <%= f.label :avatar %><br/>
    <%= f.file_field :avatar %>
  </div></p>

  <p><div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caratteri minimo)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off" %>
  </div></p>

  <p><div class="field">
    <%= f.label :conferma_password %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div></p>

  <p><div class="actions">
    <%= f.submit "Crea account", :class => 'btn btn-primary' %>
  </div></p>

  <div class="actions">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Login con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :class => 'btn btn-primary' %><p/>
      <% end -%>
    <% end -%>
  </div>
<% end %>
